{
  "name": "softaliza-backend-desafio",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/forestus/softaliza-backend-desafio.git",
  "author": "Guilherme Maciel <forestus7@gmail.com.br>",
  "license": "MIT",
  "scripts": {
    "start": "npm i --production && npx pm2 start pm2config.json --env production",
    "stop": "npx pm2 stop backend_nodejs",
    "restart": "npx pm2 restart backend_nodejs",
    "copy:unix": "cp package.json dist/ && cp ormconfig.json dist/ && cp pm2config.json dist/",
    "copy:win": "copy \"package.json\" \"dist\" && copy \"ormconfig.json\" \"dist\" && copy \"pm2config.json\" \"dist\"",
    "build": "babel src --extensions \".js,.ts\" -d dist/src --copy-files --no-copy-ignored && npm run copy:win",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "start:dev": "ts-node-dev --transpile-only --poll --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm migration:run",
    "migration:create": "npm run typeorm migration:create -- -n ",
    "migration:generate": "npm run typeorm migration:generate -- -n ",
    "schema-sync": "npm run typeorm schema:sync",
    "lint": "npx eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests  --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.3.1",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "babel": "^6.23.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^7.30.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "git-commit-msg-linter": "^3.2.6",
    "husky": "^7.0.1",
    "jasmine": "^3.8.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "pm2": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.5.3",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "translate": "^1.2.3",
    "typeorm": "^0.2.34",
    "yup": "^0.32.9"
  },
  "engines": {
    "node": "v15.3.0"
  }
}
